<qt:OptionsDialogTab
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:qt="clr-namespace:QTTabBarLib"
    x:Class="QTTabBarLib.Options14_About"
    x:ClassModifier="internal">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="OptionsDialogResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel
        Margin="14,5,10,0"
        Orientation="Vertical">
        <StackPanel
            Margin="0,0,0,4"
            Orientation="Horizontal">
            <Image
                Source="{Binding Source={x:Static qt:Resources_Image.imgTabAbout}, Converter={StaticResource BitmapToImageSourceConverter}}"
                Style="{StaticResource PageHeaderImageStyle}"/>
            <Label
                Content="{qt:Resx Key=Options_Page14_About, Index=0}"
                FontSize="13"
                VerticalAlignment="Bottom"/>
        </StackPanel>
        <StackPanel
            Margin="0,20,0,0"
            Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </StackPanel.Resources>
            <Label x:Name="lblVersion"
                Height="28"/>
            <Label x:Name="liteBy"
                Height="28" Content="Lite code by lbiasco: https://github.com/lbiasco/qttabbar">
            </Label>
            <Label x:Name="updatedBy"
                Height="28" Content="Updated code by indiff: https://github.com/indiff/qttabbar">
            </Label>
            <Label x:Name="originalBy"
                Height="28" Content="Original code by Quizo: http://qttabbar.wikidot.com/">
            </Label>
            <StackPanel Margin="10"/>
            <StackPanel Margin="10"/>

            <StackPanel Margin="10">
                <Label Content=""/>
            </StackPanel>


        </StackPanel>
    </StackPanel>
</qt:OptionsDialogTab>
